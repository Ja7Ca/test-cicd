<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center">Data Users</h1>
        <table class="table table-striped my-5">
            <a href="/view/user/add" class="btn btn-success px-3 py-1">Tambah Data User</a>
            <tr class="text-center">
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Aksi</th>
            </tr>
            <% users.forEach(user => { %>
            <tr class="text-center">
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.password %></td>
                <td class="text-center">
                    <a href="/view/user/<%= user.id %>" class="btn btn-primary px-3 py-1">Edit</a>
                    <a href="/view/user/delete/<%= user.id %>" class="text-danger  px-3 py-1 text-decoration-none" onclick="return confirm('Are you sure you want to delete this item?');">Hapus</a>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>